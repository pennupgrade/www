---
import { cn } from "@/utils/cn";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  className?: string;
}

const { className, ...attrs } = Astro.props;
---

<a
  {...attrs}
  class={cn(
    "decoration-wavy decoration-1 underline-offset-2 hover:underline",
    attrs.class,
    className,
  )}
  ><slot /></a
>
