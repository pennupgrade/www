{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": [
    "src/**/*",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/*.astro",
    ".eslintrc.cjs",
    "tailwind.config.ts",
    "astro.config.ts"
  ]
}
